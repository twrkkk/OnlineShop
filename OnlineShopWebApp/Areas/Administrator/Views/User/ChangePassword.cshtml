@using OnlineShopWebApp.Areas.Administrator.Models;
@model NewPassword

<div class="row">
    @await Html.PartialAsync("LeftAdminMenu")

    <form method="post" asp-area="Administrator" asp-controller="User" asp-action="ChangePassword" asp-route-userEmail="@Model.Email">
        <h3 class="mb-5">Изменение пароля</h3>

        <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

        <input asp-for="Email" type="hidden" value="@Model.Email">

        <div class="form-outline mb-4">
            <input asp-for="Password" type="password" class="form-control" placeholder="Новый пароль">
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-outline mb-4">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Повторите пароль">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <input type="submit" value="Изменить пароль" class="btn btn-primary" />
    </form>
</div>
