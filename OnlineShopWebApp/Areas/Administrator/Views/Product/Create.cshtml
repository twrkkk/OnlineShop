@model ProductViewModel

<form method="post" enctype="multipart/form-data" asp-area="Administrator" asp-controller="Product" asp-action="New">
    <div class="form-group">
        <label for="Name">Название:</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Название">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="Cost">Цена:</label>
        <input asp-for="Cost" type="number" class="form-control" placeholder="Цена">
        <span asp-validation-for="Cost"></span>
    </div>
    <div class="form-group">
        <label for="Description">Описание:</label>
        <input asp-for="Description" class="form-control" placeholder="Описание">
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label>Загрузить изображение</label>
        <input type="file" name="UploadedFile" class="form-control" />
    </div>

    <input type="submit" value="Сохранить" />
    <a class="btn btn-dark" asp-area="Administrator" asp-controller="Product" asp-action="Index" role="button">Отмена</a>
</form>