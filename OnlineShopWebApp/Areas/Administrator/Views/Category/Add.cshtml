@using Microsoft.AspNetCore.Identity;
@model CategoryViewModel

<form method="post">
    <h4>Добавление категории</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Название категории:</label><br />
        <div class="col-sm-8">
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" />
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-area="Administrator" asp-controller="Category" asp-action="Add">Сохранить</button>
    <a class="btn btn-outline-primary" asp-area="Administrator" asp-controller="Category" asp-action="Index">Отмена</a>
</form>